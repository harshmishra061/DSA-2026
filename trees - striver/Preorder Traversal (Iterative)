class Solution {
public:
    vector<int> preorderTraversal(TreeNode* root) {
        if(root == NULL) return {};
        vector<int> res;
        stack<TreeNode*> st;
        st.push(root);
        while(!st.empty()) {
            TreeNode* node = st.top(); st.pop();
            res.push_back(node->val);
            if(node->right != NULL) st.push(node->right);
            if(node->left != NULL) st.push(node->left);
        }
        return res;
    }
};

// Other method - common - is used in both preorder and inorder
class Solution {
public:
    vector<int> preorderTraversal(TreeNode* root) {
        if(root == NULL) return {};
        vector<int> res;
        stack<TreeNode*> st;
        TreeNode* node = root;
        while(node != NULL || !st.empty()) {
            if(node != NULL) {
                res.push_back(node->val);
                st.push(node);
                node = node->left;
            } else {
                node = st.top(); st.pop();
                node = node->right;
            }
        }
        return res;
    }
};
