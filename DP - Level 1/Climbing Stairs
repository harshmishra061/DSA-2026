// Recursive
// Number of Path to reach from 0 to N == Number of Path to reach from N to 0
class Solution {
    int climbStairs2(int n, vector<int>& dp) { // returns the number of path to reach from n to 0
        if(n == 0 || n == 1) return 1;
        if(dp[n] != -1) return dp[n];


        int ways1 = climbStairs2(n - 1, dp); // returns the number of path to reach from n - 1 to 0
        int ways2 = climbStairs2(n - 2, dp); // returns the number of path to reach from n - 2 to 0

        int totalWays = ways1 + ways2;

        return dp[n] = totalWays; 
    }
public:
    int climbStairs(int n) {
        vector<int> dp(n + 1, -1);
        return climbStairs2(n, dp);
    }
};

// Tabulation
class Solution {
public:
    int climbStairs(int n) {
        vector<int> dp(n + 1, -1);
        dp[0] = 1;
        dp[1] = 1;
        for(int i = 2;i <= n;i++) {
            dp[i] = dp[i - 1] + dp[i - 2];
        }
        return dp[n];
    }
};
